<div class="container">
<%= form_with(model: artist, local: true, html: { multipart: true }) do |form| %>
  <% if artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artist.errors.count, "error") %> prohibited this artist from being saved:</h2>

      <ul>
      <% artist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :artist_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :artist_description %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.collection_select :genre, Genre.order(:name),:id,:name, include_blank: true %>
    <% #form.genre = Genre.find(form.genre) %>
  </div>

  <div class="field">
    <%= form.label :nationality %>
    <%= form.text_field :nationality, id: :artist_nationality %>
  </div>

  <div class="field">
    <%= form.label :active_time %>
    <%= form.text_field :active_time, id: :artist_active_time %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
