<p id="notice"><%= notice %></p>

<div class="container">
  <div class="bg-faded p-4 my-4">
    <!-- Welcome Message -->
    <div class="text-center mt-4">
      <h1 class="my-2">News <%= image_tag('News/img2.png', height:'72', width:'72')%></h1>
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">If you want, you can:
        <strong><%= link_to 'New Post', new_post_path %></strong>
        </h2>
      </div>
    </div>
  </div>
  <hr class="divider">
  <h2 class="text-center text-lg text-uppercase my-0">Or
  <strong>Explore</strong>
  </h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><h2>News</h2></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <h4><strong>Title: <%= link_to post.title, post %></strong></h4>
            <h4>Content: <%= post.body %></h4>
            <h5>Related artist: <%= link_to "#{post.artist.name}", post.artist %></h5>
            <h5>Created by:<%= link_to "#{post.user.email}", "/users/profile/#{post.user.id}"  %></h5>
            <% if post.user == current_user %>
              <%= link_to image_tag("Songs/edit.svg", width:'20', height:'20'), edit_post_path(post) %>
              <%= link_to image_tag("Songs/trash.png", width:'25', height:'25'), post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
